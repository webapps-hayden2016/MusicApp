@model IEnumerable<MusicFall2016.Models.Artist>
@{
    ViewData["Title"] = "Artists";
}
<h2>Album List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Artist</th>
            <th>Bio</th>
        </tr>
    </thead>
    @foreach (var artist in Model)
    {
        <tr>
            <td>@artist.ArtistID</td>
            <td>@artist.Name</td>
            <td>@artist.Bio</td>
            <td>
                <a asp-action="Edit" asp-route-id="@artist.ArtistID">Edit</a> |
                <a asp-action="Details" asp-route-id="@artist.ArtistID">Details</a> |
                <a asp-action="Delete" asp-route-id="@artist.ArtistID">Delete</a>
            </td>
        </tr>
    }
</table>
<div>
    <a href="/Artists/Create" class="btn btn-success">Add Another</a>
    <a href="/Home" class="btn btn-default">Return to Homepage</a>
</div>